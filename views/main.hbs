        <!-- Generate Form -->
        <div id="div-form">
            <form id="query-form" action="/query" method="post">
                <!-- Node 1 Query Input Boxes -->
                <p class='text-node'>Transaction 1</p>
               
                <div id='node1-query' class='node-query'>
                    <div class = "row">
                        <select id='node1-crud' name='node1crud' class='select-crud'>
                            <option value='empty'></option>
                            <option value='read'>Read</option>
                            <option value='update'>Update</option>
                            <option value='delete'>Delete</option>
                        </select>
                    
                        <input type='search' id='node1-id' class='query-crud' name='node1id' placeholder='ID' autocomplete='off'> </input>
                        <input type='search' id='node1-name' class='query-crud' name='node1name' placeholder='Name' autocomplete='off'></input>
                        <input type='search' id='node1-year' class='query-crud' name='node1year' placeholder='Year' autocomplete='off'></input>
                        <input type='search' id='node1-rank' class='query-crud' name='node1rank' placeholder='Rank' autocomplete='off'></input>
                    </div>
                </div><br>

                <!-- Node 2 Query Input Boxes -->
                <p class='text-node'>Transaction 2</p>

                <div id='node2-query' class='node-query'>
                    <div class = "row">
                        <select id='node2-crud' name='node2crud' class='select-crud'>
                            <option value='empty'></option>
                            <option value='read'>Read</option>
                            <option value='update'>Update</option>
                            <option value='delete'>Delete</option>
                        </select>

                        <input type='search' id='node2-id' class='query-crud' name='node2id' placeholder='ID' autocomplete='off'></input>
                        <input type='search' id='node2-name' class='query-crud' name='node2name' placeholder='Name' autocomplete='off'></input>
                        <input type='search' id='node2-year' class='query-crud' name='node2year' placeholder='Year' autocomplete='off'></input>
                        <input type='search' id='node2-rank' class='query-crud' name='node2rank' placeholder='Rank' autocomplete='off'></input>
                    </div>
                </div><br>

                <!-- Node 3 Query Input Boxes-->
                <p class='text-node'>Transaction 3</p>
                
                <div id='node3-query' class='node-query'>
                    <div class = "row">
                        <select id='node3-crud' name='node3crud' class='select-crud'>
                            <option value='empty'></option>
                            <option value='read'>Read</option>
                            <option value='update'>Update</option>
                            <option value='delete'>Delete</option>
                        </select>

                        <input type='search' id='node3-id' class='query-crud' name='node3id' placeholder='ID' autocomplete='off'></input>
                        <input type='search' id='node3-name' class='query-crud' name='node3name' placeholder='Name' autocomplete='off'></input>
                        <input type='search' id='node3-year' class='query-crud' name='node3year' placeholder='Year' autocomplete='off'></input>
                        <input type='search' id='node3-rank' class='query-crud' name='node3rank' placeholder='Rank' autocomplete='off'></input>
                    </div>
                </div><br>

                <p class='text-node'>Isolation Level</p>
                <select name='isolation' id='form-isolation'>
                    <option value='read-repeatable'>Repeatable Read</option>
                    <option value='read-uncommitted'>Read Uncommitted</option>
                    <option value='read-committed'>Read Committed</option>
                    <option value='serializable'>Serializable</option>
                </select>
            </form>
        </div>

        <!-- Submit Buttons -->
        <div id="div-buttons">
            <div id="alert-invalid" style="margin-bottom: 8px; display: none;"></div>
            <button id="execute-button" class="interactive-buttons">Execute</button>
        </div>
            <!-- DISPLAY RESULTS-->
    <div id="query-results">
        <div id="results-box">
            <p id="text-results">Results</p>
        </div>
        
    </div>
    </div>


