<!DOCTYPE html>
<html>
<head>    
    <title>IMDb</title>
    <meta name="description" content="Main">
    <meta name="keyword" content="Java">
    {{!-- <link rel="stylesheet" type="text/css" href="/css/layout.css"> --}}
    {{!-- <link rel="icon" type = "image/x-icon" href="https://upload.wikimedia.org/wikipedia/commons/c/cc/IMDb_Logo_Square.svg"> --}}
    {{!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css"> --}}
    {{!-- <link rel="stylesheet" href="https://unpkg.com/axist@latest/dist/axist.min.css" /> --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.4.1/milligram.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
    <script src="/js/query.js" type="text/javascript"></script>
</head>
<body>
   
    
    <!-- TRANSACTIONS -->
    <div id="query-box" class = "container">
        <div id="div-pick">
            <h3><a onclick="window.location.href=this">Transaction Manager</a> </h3>
        </div>

        <!-- Generate Form -->
        <div id="div-form">
            <form id="query-form" action="/query" method="post">
                <!-- Node 1 Query Input Boxes -->
                <p class='text-node'>Transaction 1</p>
               
                    <div id='node1-query' class='node-query'>
                    <div class = "row">
                        <select id='node1-crud' name='node1crud' class='select-crud'>
                            <option value='empty'></option>
                            <option value='create'>Create</option>
                            <option value='read'>Read</option>
                            <option value='update'>Update</option>
                            <option value='delete'>Delete</option>
                        </select>
                    
                        <input type='search' id='node1-id' class='query-crud' name='node1id' placeholder='ID' autocomplete='off'> </input>
                        <input type='search' id='node1-title' class='query-crud' name='node1title' placeholder='Name' autocomplete='off'></input>
                        <input type='search' id='node1-year' class='query-crud' name='node1year' placeholder='Year' autocomplete='off'></input>
                        <input type='search' id='node1-genre' class='query-crud' name='node1genre' placeholder='Genre' autocomplete='off'></input>
                    </div>
                </div><br>

                <!-- Node 2 Query Input Boxes -->
                <p class='text-node'>Transaction 2</p>

                <div id='node2-query' class='node-query'>
                    <div class = "row">
                        <select id='node2-crud' name='node2crud' class='select-crud'>
                            <option value='empty'></option>
                            <option value='create'>Create</option>
                            <option value='read'>Read</option>
                            <option value='update'>Update</option>
                            <option value='delete'>Delete</option>
                        </select>

                        <input type='search' id='node2-id' class='query-crud' name='node2id' placeholder='ID' autocomplete='off'>
                        <input type='search' id='node2-title' class='query-crud' name='node2title' placeholder='Name' autocomplete='off'>
                        <input type='search' id='node2-year' class='query-crud' name='node2year' placeholder='Year' autocomplete='off'>
                        <input type='search' id='node2-genre' class='query-crud' name='node2genre' placeholder='Genre' autocomplete='off'></input>
                    </div>
                </div><br>

                <!-- Node 3 Query Input Boxes-->
                <p class='text-node'>Transaction 3</p>
                
                <div id='node3-query' class='node-query'>
                    <div class = "row">
                        <select id='node3-crud' name='node3crud' class='select-crud'>
                            <option value='empty'></option>
                            <option value='read'>Read</option>
                            <option value='create'>Create</option>
                            <option value='update'>Update</option>
                            <option value='delete'>Delete</option>
                        </select>

                        <input type='search' id='node3-id' class='query-crud' name='node3id' placeholder='ID' autocomplete='off'>
                        <input type='search' id='node3-title' class='query-crud' name='node3title' placeholder='Name' autocomplete='off'>
                        <input type='search' id='node3-year' class='query-crud' name='node3year' placeholder='Year' autocomplete='off'>
                        <input type='search' id='node3-genre' class='query-crud' name='node3genre' placeholder='Genre' autocomplete='off'></input>
                    </div>
                </div><br>

                <p class='text-node'>Isolation Level</p>
                <select name='isolation' id='form-isolation'>
                    <option value='read-repeatable'>Repeatable Read</option>
                    <option value='read-uncommitted'>Read Uncommitted</option>
                    <option value='read-committed'>Read Committed</option>
                    <option value='serializable'>Serializable</option>
                </select>
            </form>
        </div>

        <!-- Submit Buttons -->
        <div id="div-buttons">
            <div id="alert-invalid" style="margin-bottom: 8px; display: none;"></div>
            <button id="execute-button" class="interactive-buttons">Execute</button>
        </div>
            <!-- DISPLAY RESULTS-->
        <div id="query-results">
            <div id="results-box">
                <p id="text-results">Results</p>
            </div>
            
        </div>
    </div>
</body>
</html>